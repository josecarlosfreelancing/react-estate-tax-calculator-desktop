<ResourceDictionary
    x:Class="EstateView.Themes.Default.DefaultLabeledTextBlockStyle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:view="clr-namespace:EstateView.View">

    <Style x:Key="DefaultLabeledTextBlockStyle" TargetType="{x:Type view:LabeledTextBlock}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type view:LabeledTextBlock}">
                    <TextBlock>
                        <Run FontWeight="Bold" Text="{TemplateBinding LabelText}" />
                        <Run Text="{TemplateBinding Text}" />
                    </TextBlock>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>